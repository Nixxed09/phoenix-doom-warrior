{
  "name": "phoenix-doom-warrior",
  "version": "1.0.0",
  "description": "A 3D DOOM-style FPS game built with Three.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "deploy": "npm run test && npm run build && vercel --prod",
    "deploy:preview": "npm run build && vercel",
    "analyze": "vite-bundle-visualizer",
    "generate-icons": "node scripts/generate-icons.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "clean": "rm -rf dist node_modules/.vite",
    "serve": "npx serve dist"
  },
  "dependencies": {
    "three": "^0.160.0",
    "@types/three": "^0.160.0",
    "cannon-es": "^0.20.0",
    "howler": "^2.2.4",
    "nipplejs": "^0.10.1"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.4",
    "@vitejs/plugin-basic-ssl": "^1.0.2",
    "vitest": "^1.1.0",
    "vite-bundle-visualizer": "^0.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "serve": "^14.2.1",
    "vercel": "^32.7.2"
  }
}